<h1>Listing photos</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Content type</th>
    <th>Filename</th>
    <th>Binary data</th>
    <th>Processed Image</th>
  </tr>

<% for photo in @photos %>
  <tr>
    <td><%=h photo.description %></td>
    <td><%=h photo.content_type %></td>
    <td><%=h photo.filename %></td>
    <td><%= image_tag(formatted_photo_path(photo, "jpg"), :alt => photo.filename) %></td>

    <td><%= link_to 'Show', photo %></td>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', photo, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New photo', new_photo_path %>
